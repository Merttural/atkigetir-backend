# Production Environment Variables
PORT=5000
NODE_ENV=production
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/atkigetir
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Payment Integration
IYZIPAY_API_KEY=your-iyzico-api-key
IYZIPAY_SECRET_KEY=your-iyzico-secret-key
IYZIPAY_BASE_URL=https://sandbox-api.iyzipay.com

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Security
CORS_ORIGIN=https://atkigetir.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Development Override (comment out in production)
# CORS_ORIGIN=http://localhost:3000
# IYZIPAY_BASE_URL=https://sandbox-api.iyzipay.com 